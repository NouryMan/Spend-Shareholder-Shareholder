@model Spend.Models.SALES_CUSTTBL_Model
@{
    ViewBag.Title = " بطاقة عميل ";
}









<div class="dashboard-content-wrap">
    <div class="dashboard-bread dashboard--bread dashboard-bread-2">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="breadcrumb-content">
                        <div class="section-heading">
                            <h2 class="sec__title font-size-30 text-white">انشاء عميل</h2>
                        </div>
                    </div><!-- end breadcrumb-content -->
                </div><!-- end col-lg-6 -->
                <div class="col-lg-6">
                    <div class="breadcrumb-list text-right">
                        <ul class="list-items">
                            <li><a href="index.html" class="text-white">الصفحة الرئيسية</a></li>
                            <li>ادارة العملاء </li>
                          

                        </ul>
                    </div><!-- end breadcrumb-list -->
                </div><!-- end col-lg-6 -->
            </div><!-- end row -->
        </div>
    </div><!-- end dashboard-bread -->
    <div class="dashboard-main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-box">
                        <div class="form-title-wrap">
                            <div>
                                <h3 class="title"> بطاقة عميل</h3>
                                @*<p class="font-size-14">إظهار 1 إلى 10 من أصل 20 مُدخل</p>*@
                            </div>



                        </div>
                        <div class="form-content">


                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">الحساب الرئيسي</label>
                                            <select id="CUST_ACC_PARENT" name="CUST_ACC_PARENT" class="selectpicker  form-control" dir="rtl" data-live-search="true" required onchange="getAcc_NO()">
                                                <option value="">اختار حساب رئيسي </option>
                                                @foreach (var item in ViewBag.Parent_ACC)
                                                {
                                                    if (Model!=null && Model.CUST_ACC_PARENT == item.ACC_NO)
                                                    {
                                                        <option selected class="themeprimary" value="@item.ACC_NO">
                                                            @{ try
                                                                { @item.ACC_NAME <span>&nbsp;</span> @item.ACC_NO }
                                                            catch { }
                                                            }
                                                        </option>
}
                                                    else
                                                    {
                                                        <option class="themeprimary" value="@item.ACC_NO">
                                                            @{ try
                                                                { @item.ACC_NAME <span>&nbsp;</span> @item.ACC_NO 
                                                                
                                                               }
                                                            catch { }
                                                            }
                                                        </option>
                                                    }
                                                }


                                            </select>
                                            @Html.ValidationMessageFor(model => model.CUST_ACC_PARENT, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                    <div class="row col-md-6">
                                        <div class="col-md-6 ml-0">
                                            <div class="form-floating mb-6 mb-md-0">
                                                <label for="inputPasswordConfirm">خاتمة رقم الحساب</label>
                                                @Html.EditorFor(model => model.Acc_NOString, new { htmlAttributes = new { @class = "form-control", @type = "number", @required = "required", } })
                                                @Html.ValidationMessageFor(model => model.CUST_ACC, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="col-md-6 pl-1 pr-0">
                                            <div class="form-floating mb-6 mb-md-0">
                                                <label for="inputPasswordConfirm">بادئة الحساب</label>
                                                <input type="text" class="form-control" id="parent-Acc" disabled />
                                            </div>
                                        </div>
                                    </div>


                                </div>



                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">الاسم العربي</label>
                                            @Html.EditorFor(model => model.CUST_NAME_AR, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "الاسم العربي", @required = "required" } })
                                            @Html.ValidationMessageFor(model => model.CUST_NAME_AR, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">الاسم الانجليزي</label>
                                            @Html.EditorFor(model => model.CUST_NAME_EN, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = " الاسم بالانجليزي", } })
                                            @Html.ValidationMessageFor(model => model.CUST_NAME_EN, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">رقم الجوال</label>
                                            @Html.EditorFor(model => model.MOBILE_NO, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "رقم الجوال " } })
                                            @Html.ValidationMessageFor(model => model.MOBILE_NO, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">رقم الهاتف</label>
                                            @Html.EditorFor(model => model.PHONE, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = " رقم الهاتف", } })
                                            @Html.ValidationMessageFor(model => model.PHONE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">العنوان</label>
                                            @Html.EditorFor(model => model.CUST_ADDRESS, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = " العنوان" } })
                                            @Html.ValidationMessageFor(model => model.CUST_ADDRESS, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">الرقم الضريبي</label>
                                            @Html.EditorFor(model => model.VAT_NO, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = " الرقم الضريبي", } })
                                            @Html.ValidationMessageFor(model => model.VAT_NO, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">


                                        <label for="inputPasswordConfirm">حالة الحساب</label>
                                        <div class="switch-h d-flex justify-content-between align-items-center border p-1 mb-3">
                                            <h5 class="font-size-h4 text-dark mb-0">مفعل</h5>
                                            <div class="custom-control switch custom-switch-info custom-switch custom-control-inline mr-0">
                                                @Html.CheckBoxFor(model => model.ENABLED, new { @class = "custom-control-input", @id = "ENABLED", @checked = "checked", })

                                                <label class="custom-control-label mr-1" for="ENABLED">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">ملاحظة</label>
                                            @Html.EditorFor(model => model.NOTE, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = " ملاحظة", } })
                                            @Html.ValidationMessageFor(model => model.NOTE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                </div>








                                <div class="row mt-4 mb-0">
                                    <div class="d-grid col-md-6 "><button class="btn btn-primary btn-block" type="submit">حفظ</button></div>

                                    <div class="d-grid col-md-6"><a class="btn btn-danger btn-block" href="~/SALES_CUST/Index">رجوع</a></div>





                                </div>
                            }

                        </div>
                    </div><!-- end form-box -->
                </div><!-- end col-lg-12 -->
            </div><!-- end row -->

            <div class="border-top mt-5"></div>
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="copy-right padding-top-30px">

                        <p class="copy__desc">
                            &copy; Copyright Tech Light 2022. Made with
                            <span class="la la-heart"></span> by <a href="http://Tech-Light.com/">Noury</a>
                        </p>

                    </div><!-- end copy-right -->
                </div><!-- end col-lg-7 -->
                <div class="col-lg-5">
                    <div class="footer-social-box text-right padding-top-30px">
                        <ul class="social-profile">
                            <li><a href="#"><i class="lab la-facebook-f"></i></a></li>
                            <li><a href="#"><i class="lab la-twitter"></i></a></li>
                            <li><a href="#"><i class="lab la-instagram"></i></a></li>
                            <li><a href="#"><i class="lab la-linkedin-in"></i></a></li>
                        </ul>
                    </div><!-- end copy-right-content -->
                </div><!-- end col-lg-5 -->
            </div><!-- end row -->
        </div><!-- end container-fluid -->
    </div><!-- end dashboard-main-content -->
</div><!-- end dashboard-content-wrap -->






<script>



    $(document).ready(function () { getAcc_NO() })
    function getAcc_NO() {



        var id = $('#CUST_ACC_PARENT').val();
        $('#parent-Acc').val(id);

        var ajaxMethodUrl = "/SALES_CUST/getAcc_NO?parent_id=" + id;

        $.ajax({
            async: false,
            cache: true,
            type: "Get",
            url: ajaxMethodUrl,
            success: function (data) {
                $('#Acc_NOString').val(data);


            },


        });
    }



</script>