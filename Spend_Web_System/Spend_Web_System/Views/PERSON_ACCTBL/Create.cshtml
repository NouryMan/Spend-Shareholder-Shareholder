@model Spend.Models.PERSON_ACCTBL_Model
@{
    ViewBag.Title = "انشاء حساب";
}

<div class="dashboard-content-wrap">
    <div class="dashboard-bread dashboard--bread dashboard-bread-2">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="breadcrumb-content">
                        <div class="section-heading">
                            <h2 class="sec__title font-size-30 text-white">انشاء حساب</h2>
                        </div>
                    </div><!-- end breadcrumb-content -->
                </div><!-- end col-lg-6 -->
                <div class="col-lg-6">
                    <div class="breadcrumb-list text-right">
                        <ul class="list-items">
                            <li><a href="index.html" class="text-white">الصفحة الرئيسية</a></li>
                            <li>تهئية النظام</li>
                            <li>تهيئة الاشخاص</li>

                        </ul>
                    </div><!-- end breadcrumb-list -->
                </div><!-- end col-lg-6 -->
            </div><!-- end row -->
        </div>
    </div><!-- end dashboard-bread -->
    <div class="dashboard-main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-box">
                        <div class="form-title-wrap">
                            <div>
                                <h3 class="title"> انشاء حساب</h3>
                                @*<p class="font-size-14">إظهار 1 إلى 10 من أصل 20 مُدخل</p>*@
                            </div>



                        </div>
                        <div class="form-content">


                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">اختار اذا كان موجود مسبقاً</label>
                                            <select id="PERSON_ID" name="PERSON_ID" class="selectpicker  form-control" dir="rtl" data-live-search="true" onchange="personal()">
                                                <option value="" class="themeprimary">جديد</option>
                                                @foreach (var item in ViewBag.personalinfo)
                                                {

                                                    <option class="themeprimary" value="@item.ID">
                                                        @{ try
                                                            { @item.AR_NAME }
                                                        catch { } }
                                                    </option>
                                                }


                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm"> الاسم عربي</label>
                                            @Html.EditorFor(model => model.PERSONAL_INFOTBL_Model.AR_NAME, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = " الاسم عربي" } })
                                            @Html.ValidationMessageFor(model => model.PERSONAL_INFOTBL_Model.AR_NAME, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                </div>


                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm"> الاسم انجليزي</label>
                                            @Html.EditorFor(model => model.PERSONAL_INFOTBL_Model.EN_NAME, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "الاسم انجليزي" } })
                                            @Html.ValidationMessageFor(model => model.PERSONAL_INFOTBL_Model.EN_NAME, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm"> رقم الهوية</label>
                                            @Html.EditorFor(model => model.PERSONAL_INFOTBL_Model.C_ID, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "رقم الهوية" } })
                                            @Html.ValidationMessageFor(model => model.PERSONAL_INFOTBL_Model.C_ID, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm"> العنوان</label>
                                            @Html.EditorFor(model => model.PERSONAL_INFOTBL_Model.ADDRESS1, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "العنوان" } })
                                            @Html.ValidationMessageFor(model => model.PERSONAL_INFOTBL_Model.ADDRESS1, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm"> الجوال</label>
                                            @Html.EditorFor(model => model.PERSONAL_INFOTBL_Model.MOBILE_NO, new { htmlAttributes = new { @class = "form-control", @typ = "number", @placeholder = "الجوال" } })
                                            @Html.ValidationMessageFor(model => model.PERSONAL_INFOTBL_Model.MOBILE_NO, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>


                                <div class="row mb-3">


                                    <div class="col-md-6">
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm"> البريد الالكتروني </label>
                                            @Html.EditorFor(model => model.PERSONAL_INFOTBL_Model.EMAIL_ADDRESS, new { htmlAttributes = new { @class = "form-control", @type = "email", @placeholder = " البريد الالكتروني", @autocomplete = "off" } })
                                            @Html.ValidationMessageFor(model => model.PERSONAL_INFOTBL_Model.EMAIL_ADDRESS, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm"> الملاحظة</label>
                                            @Html.EditorFor(model => model.PERSONAL_INFOTBL_Model.DESCRIPTION, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "الملاحظة", @autocomplete = "off" } })
                                            @Html.ValidationMessageFor(model => model.NOTE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                </div>


                                @*<-->         login date       </-->*@
                                <div class="row bg-info p-3 h4">بيانات الحساب</div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">الحساب الرئيسي</label>
                                            <select id="PARENT_ACC" name="PARENT_ACC" class="selectpicker  form-control" dir="rtl" data-live-search="true" required onchange="getAcc_NO()">
                                                <option value="">اختار حساب رئيسي </option>
                                                @foreach (var item in ViewBag.Parent_ACC)
                                                {

                                                    <option class="themeprimary" value="@item.ACC_NO">
                                                        @{ try
                                                            { @item.ACC_NAME <span>&nbsp;</span> @item.ACC_NO }
                                                        catch { } }
                                                    </option>
                                                }
                                                ""

                                            </select>
                                            @Html.ValidationMessageFor(model => model.PARENT_ACC, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                    <div class="row col-md-6">
                                        <div class="col-md-6 ml-0">
                                            <div class="form-floating mb-6 mb-md-0">
                                                <label for="inputPasswordConfirm">خاتمة رقم الحساب</label>
                                                @Html.EditorFor(model => model.Acc_NOString, new { htmlAttributes = new { @class = "form-control", @type = "number", @required = "required", } })
                                                @Html.ValidationMessageFor(model => model.ACC_NO, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="col-md-6 pl-1 pr-0">
                                            <div class="form-floating mb-6 mb-md-0">
                                                <label for="inputPasswordConfirm">بادئة الحساب</label>
                                                <input type="text" class="form-control" id="parent-Acc" disabled />
                                            </div>
                                        </div>
                                    </div>


                                </div>

                                <div class="row mb-3">


                                    <div class="col-md-6">
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm">نوع الحساب</label>
                                            <select id="ACC_TYPE" name="ACC_TYPE" class="selectpicker  form-control" dir="rtl" data-live-search="true" required>

                                                @foreach (var item in ViewBag.ACC_TYPE)
                                                {

                                                    <option class="themeprimary" value="@item.ID_NO">
                                                        @{ try
                                                            { @item.ACC_TYPE }
                                                        catch { } }
                                                    </option>
                                                }


                                            </select>
                                            @Html.ValidationMessageFor(model => model.ACC_TYPE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">طبيعة الحساب</label>
                                            <select id="ACC_NAT" name="ACC_NAT" class="selectpicker  form-control" dir="rtl" data-live-search="true" required>

                                                @foreach (var item in ViewBag.ACC_NAT)
                                                {

                                                    <option class="themeprimary" value="@item.ID_NO">
                                                        @{ try
                                                            { @item.ACC_NAT }
                                                        catch { } }
                                                    </option>
                                                }


                                            </select>
                                            @Html.ValidationMessageFor(model => model.ACC_NAT, "", new { @class = "text-danger" })

                                        </div>
                                    </div>




                                </div>




                                <div class="row mb-3">


                                    <div class="col-md-6">

                                        <label for="inputPasswordConfirm">حساب تحليلي</label>
                                        <div class="switch-h d-flex justify-content-between align-items-center border p-1 ">
                                            <h5 class="font-size-h4 text-dark mb-0">نعم</h5>
                                            <div class="custom-control switch custom-switch-info custom-switch custom-control-inline mr-0">
                                                @Html.CheckBoxFor(model => model.OP_ACC, new { @class = "custom-control-input", @id = "OP_ACC", @checked = "checked", })
                                                <label class="custom-control-label mr-1" for="OP_ACC">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">


                                        <label for="inputPasswordConfirm">حالة الحساب</label>
                                        <div class="switch-h d-flex justify-content-between align-items-center border p-1 mb-3">
                                            <h5 class="font-size-h4 text-dark mb-0">مفعل</h5>
                                            <div class="custom-control switch custom-switch-info custom-switch custom-control-inline mr-0">
                                                @Html.CheckBoxFor(model => model.IS_ENABLED, new { @class = "custom-control-input", @id = "IS_ENABLE", @checked = "checked", })

                                                <label class="custom-control-label mr-1" for="IS_ENABLE">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">


                                    <div class="col-md-6">
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm">علاقتة الحساب بشركة</label>
                                            <select id="PERSON_DESC_ID" name="PERSON_DESC_ID" class="selectpicker  form-control" dir="rtl" data-live-search="true" required>

                                                @foreach (var item in ViewBag.PERSON_DESCRIPTIONTBL)
                                                {

                                                    <option class="themeprimary" value="@item.ID">
                                                        @{ try
                                                            { @item.DESC_NAME }
                                                        catch { } }
                                                    </option>
                                                }


                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm"> الملاحظة</label>
                                            @Html.EditorFor(model => model.NOTE, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "الملاحظة", @autocomplete = "off" } })
                                            @Html.ValidationMessageFor(model => model.NOTE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                </div>


                                <div class="row mt-4 mb-0">
                                    <div class="d-grid col-md-6 "><button class="btn btn-primary btn-block" type="submit">حفظ</button></div>

                                    <div class="d-grid col-md-6"><a class="btn btn-danger btn-block" href="~/PERSON_ACCTBL/Index">رجوع</a></div>





                                </div>
                            }



                        </div>
                    </div><!-- end form-box -->
                </div><!-- end col-lg-12 -->
            </div><!-- end row -->

            <div class="border-top mt-5"></div>
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="copy-right padding-top-30px">
                        <p class="copy__desc">
                            &copy; Copyright Tech Light 2022. Made with
                            <span class="la la-heart"></span> by <a href="http://Tech-Light.com/">Noury</a>
                        </p>
                    </div><!-- end copy-right -->
                </div><!-- end col-lg-7 -->
                <div class="col-lg-5">
                    <div class="footer-social-box text-right padding-top-30px">
                        <ul class="social-profile">
                            <li><a href="#"><i class="lab la-facebook-f"></i></a></li>
                            <li><a href="#"><i class="lab la-twitter"></i></a></li>
                            <li><a href="#"><i class="lab la-instagram"></i></a></li>
                            <li><a href="#"><i class="lab la-linkedin-in"></i></a></li>
                        </ul>
                    </div><!-- end copy-right-content -->
                </div><!-- end col-lg-5 -->
            </div><!-- end row -->
        </div><!-- end container-fluid -->
    </div><!-- end dashboard-main-content -->
</div><!-- end dashboard-content-wrap -->



<script>


    function personal() {

        $('#PERSONAL_INFOTBL_Model_AR_NAME').val(null)
        $('#PERSONAL_INFOTBL_Model_EN_NAME').val(null)
        $('#PERSONAL_INFOTBL_Model_C_ID').val(null)
        $('#PERSONAL_INFOTBL_Model_ADDRESS1').val(null)
        $('#PERSONAL_INFOTBL_Model_MOBILE_NO').val(null)
        $('#PERSONAL_INFOTBL_Model_EMAIL_ADDRESS').val(null)

        var id = $('#PERSON_ID').val();

        var ajaxMethodUrl = "/PERSON_ACCTBL/getPersondeteiles?id=" + id;

        $.ajax({
            async: false,
            cache: true,
            type: "Get",
            url: ajaxMethodUrl,
            success: function (data) {

                $('#PERSONAL_INFOTBL_Model_AR_NAME').val(data[0])
                //   $('#PERSONAL_INFOTBL_Model_AR_NAME').prop('disabled', true)
                $('#PERSONAL_INFOTBL_Model_EN_NAME').val(data[1])
                //  $('#PERSONAL_INFOTBL_Model_EN_NAME').prop('disabled', true)
                $('#PERSONAL_INFOTBL_Model_C_ID').val(data[2])
                //  $('#PERSONAL_INFOTBL_Model_C_ID').prop('disabled', true)
                $('#PERSONAL_INFOTBL_Model_ADDRESS1').val(data[3])
                //   $('#PERSONAL_INFOTBL_Model_ADDRESS1').prop('disabled', true)
                $('#PERSONAL_INFOTBL_Model_MOBILE_NO').val(data[4])
                //   $('#PERSONAL_INFOTBL_Model_MOBILE_NO').prop('disabled', true)
                $('#PERSONAL_INFOTBL_Model_EMAIL_ADDRESS').val(data[5])
                //  $('#PERSONAL_INFOTBL_Model_EMAIL_ADDRESS').prop('disabled', true)



            },


        });



    }

    function getAcc_NO() {



        var id = $('#PARENT_ACC').val();
        $('#parent-Acc').val(id);

        var ajaxMethodUrl = "/PERSON_ACCTBL/getAcc_NO?parent_id=" + id;

        $.ajax({
            async: false,
            cache: true,
            type: "Get",
            url: ajaxMethodUrl,
            success: function (data) {
                $('#Acc_NOString').val(data);


            },


        });
    }



</script>