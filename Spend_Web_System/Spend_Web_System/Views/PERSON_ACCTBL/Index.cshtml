@model IEnumerable<Spend.Models.PERSON_ACCTBL_Model>
@using PagedList.Mvc;
@{
    ViewBag.Title = "الاشخاص";
}




@if (Model != null)
{




    <div class="dashboard-content-wrap">
        <div class="dashboard-bread dashboard--bread dashboard-bread-2">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="breadcrumb-content">
                            <div class="section-heading">
                                <h2 class="sec__title font-size-30 text-white">تعريف الاشخاص</h2>
                            </div>
                        </div><!-- end breadcrumb-content -->
                    </div><!-- end col-lg-6 -->
                    <div class="col-lg-6">
                        <div class="breadcrumb-list text-right">
                            <ul class="list-items">
                                <li><a href="index.html" class="text-white">الصفحة الرئيسية</a></li>
                                <li>تهيئة النظام</li>
                                @*<li>الصلاحيات</li>*@
                            </ul>
                        </div><!-- end breadcrumb-list -->
                    </div><!-- end col-lg-6 -->
                </div><!-- end row -->
            </div>
        </div><!-- end dashboard-bread -->
        <div class="dashboard-main-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-box">
                            <div class="form-title-wrap">


                                <a href="~/PERSON_ACCTBL/create/@try{@Model.FirstOrDefault().PERSON_DESC_ID} catch { } " class="btn btn-primary btn-sm "> <i class="fa fa-plus"> </i>تعريف جديد</a>



                            </div>
                            <div class="form-content">
                                <div>

                                    <table id="DTable" class="table table-responsive table-bordered table-striped ">
                                        <thead>
                                            <tr>


                                                <th class="text-align-center">
                                                    <span class="font-110">الاسم</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110">رقم الجوال</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110"> رقم الحساب </span>

                                                </th>

                                                <th class="text-align-center">
                                                    <span class="font-110">الحساب الاب</span>

                                                </th>

                                                <th class="text-align-center">
                                                    <span class="font-110">مستوى الحساب</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110">نوعية الحساب</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110">علاقتة بشركة</span>

                                                </th>

                                                <th class="text-align-center">
                                                    <span class="font-110">ملاحظة</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110">حالة الحساب</span>

                                                </th>




                                                <th class="text-align-center">


                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Spend.Models.PERSON_ACCTBL_Model item in Model)
                                            {


                                            <tr>

                                                <td>
                                                    @try
                                                    {@item.PERSONAL_INFOTBL_Model.AR_NAME}
                                                catch { }
                                            </td>

                                            <td>
                                                @try
                                                {@item.PERSONAL_INFOTBL_Model.MOBILE_NO}
                                            catch { }
                                            </td>
                                            <td>@item.ACC_NO</td>
                                            <td>
                                                @try
                                                {@item.ALL_ACC_NOTBL_Model.ACC_NAME <span>&nbsp;</span> @item.PARENT_ACC}
                                            catch { }
                                            </td>
                                            <td>
                                                @try
                                                {@item.ACC_LEVEL}
                                            catch { }
                                            </td>

                                            <td>
                                                @try
                                                {@item.ACC_TYPETBL_Model.ACC_TYPE}
                                            catch { }
                                            </td>
                                            <td>
                                                @try
                                                {@item.PERSON_DESCRIPTIONTBL_Model.DESC_NAME}
                                            catch { }
                                            </td>
                                            <td>
                                                @try
                                                {@item.NOTE}
                                            catch { }
                                            </td>

                                            <td>
                                                @if (item.IS_ENABLED == true)
                                                {<span class="badge badge-info text-white py-1 px-2">نشط </span>}
                                                else
                                                {
                                                    <span class="badge badge-danger text-white py-1 px-2">متوقف </span>
                                                }
                                            </td>



                                            <td>
                                                <div class="row">
                                                    <div class="row m-1">
                                                        <div class="col-md-12 ">
                                                            <a href="" class="btn btn-success btn-sm "> <i class="la  la-eye"> </i></a>
                                                        </div>
                                                    </div>



                                                    <div class="row  m-1">
                                                        <div class="col-md-12 ">
                                                            <a href="" class="btn btn-info btn-sm "> <i class="la  la-edit"></i></a>
                                                        </div>
                                                    </div>


                                                    <div class="row  m-1">
                                                        <div class="col-md-12">
                                                            <a href="" class="btn btn-danger btn-sm "> <i class="la  la-trash"></i></a>
                                                        </div>
                                                    </div>
                                                </div>



                                            </td>
                                            </tr>

                                            }
                                        </tbody>

                                    </table>
                                </div>


                            </div>
                        </div><!-- end form-box -->
                    </div><!-- end col-lg-12 -->
                </div><!-- end row -->
            <div class="border-top mt-5"></div>
                <div class="row align-items-center">
                    <div class="col-lg-7">
                        <div class="copy-right padding-top-30px">
                            <p class="copy__desc">
                                &copy; Copyright Tech Light 2022. Made with
                                <span class="la la-heart"></span> by <a href="http://Tech-Light.com/">Noury</a>
                            </p>
                        </div><!-- end copy-right -->
                    </div><!-- end col-lg-7 -->
                    <div class="col-lg-5">
                        <div class="footer-social-box text-right padding-top-30px">
                            <ul class="social-profile">
                                <li><a href="#"><i class="lab la-facebook-f"></i></a></li>
                                <li><a href="#"><i class="lab la-twitter"></i></a></li>
                                <li><a href="#"><i class="lab la-instagram"></i></a></li>
                                <li><a href="#"><i class="lab la-linkedin-in"></i></a></li>
                            </ul>
                        </div><!-- end copy-right-content -->
                    </div><!-- end col-lg-5 -->
                </div><!-- end row -->
            </div><!-- end container-fluid -->
        </div><!-- end dashboard-main-content -->
    </div><!-- end dashboard-content-wrap -->


<script>
    jQuery(document).ready(function () {
        ReportTabl = jQuery('#DTable').DataTable({
            "pagingType": "simple_numbers",

            "columnDefs": [{
                "targets": 'no-sort',
                "orderable": false,
            }], dom: 'Bfrtip',
            responsive: true,
            buttons:
                [
                    { extend: 'copy', text: 'نسخ' },
                    { extend: 'csv', text: 'csv' },
                    { extend: 'excel', text: 'اكسل' },
                    { extend: 'pdf', text: 'Pdf' },
                    { extend: 'print', text: 'طباعة' }


                ],

        });



    });


</script>


}

