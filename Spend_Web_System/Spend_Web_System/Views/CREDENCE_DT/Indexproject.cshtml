@model IEnumerable<Spend.Models.USER_UTLIST_PROJECTTBL_Model>
@{
    ViewBag.Title = "Home Page";

    string[] color = { "bg-primary", "bg-warning", "bg-success", "bg-danger" };
    int i = 0;
}


<div class="dashboard-content-wrap">
    <div class="dashboard-bread dashboard--bread dashboard-bread-2">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="breadcrumb-content">
                        <div class="section-heading">
                            <h2 class="sec__title font-size-30 text-white">الاستحقاقات</h2>
                        </div>
                    </div><!-- end breadcrumb-content -->
                </div><!-- end col-lg-6 -->
                <div class="col-lg-6">
                    <div class="breadcrumb-list text-right">
                        <ul class="list-items">
                            <li class="breadcrumb-item"><a href="~/">الرئسية</a></li>
                            <li class="breadcrumb-item active">المشاريع</li>

                        </ul>
                    </div><!-- end breadcrumb-list -->
                </div><!-- end col-lg-6 -->
            </div><!-- end row -->
        </div>
    </div><!-- end dashboard-bread -->
    <div class="dashboard-main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-box">
                        <div class="form-title-wrap">
                        </div>
                        <div class="form-content">

                            <div class="row">

                                <div class="col-xl-3 col-md-6">
                                    <div class="card  text-white mb-4" style="background-color:darkmagenta">
                                        <div class="card-body"><h4>كل الاستحقاقات </h4> </div>
                                        <div class="card-footer d-flex align-items-center justify-content-between">
                                            <a class="small text-white stretched-link" href="~/credence_dt/index_All/">عرض الكل</a>
                                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                        </div>
                                    </div>
                                </div>

                                @foreach (var item in Model.GroupBy(x => x.PROJECT_ID))
                                {

                                    if (i >= color.Length) { i = 0; }

                                    <div class="col-xl-3 col-md-6">
                                        <div class="card @color[i] text-white mb-4">
                                            <div class="card-body">@item.FirstOrDefault().PROJECTTBL_Model.PROJECT_NAME</div>
                                            <div class="card-footer d-flex align-items-center justify-content-between">
                                                <a class="small text-white stretched-link" href="~/credence_dt/Index_person_acc_project/@item.FirstOrDefault().PROJECT_ID">عرض التفاصيل</a>
                                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                    i++;

                                }



                            </div>




                        </div>
                    </div><!-- end form-box -->
                </div><!-- end col-lg-12 -->
            </div><!-- end row -->
            <div class="border-top mt-5"></div>
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="copy-right padding-top-30px">
                        <p class="copy__desc">
                            &copy; Copyright Tech Light 2022. Made with
                            <span class="la la-heart"></span> by <a href="http://Tech-Light.com/">Noury</a>
                        </p>
                    </div><!-- end copy-right -->
                </div><!-- end col-lg-7 -->
                <div class="col-lg-5">
                    <div class="footer-social-box text-right padding-top-30px">
                        <ul class="social-profile">
                            <li><a href="#"><i class="lab la-facebook-f"></i></a></li>
                            <li><a href="#"><i class="lab la-twitter"></i></a></li>
                            <li><a href="#"><i class="lab la-instagram"></i></a></li>
                            <li><a href="#"><i class="lab la-linkedin-in"></i></a></li>
                        </ul>
                    </div><!-- end copy-right-content -->
                </div><!-- end col-lg-5 -->
            </div><!-- end row -->
        </div><!-- end container-fluid -->
    </div><!-- end dashboard-main-content -->
</div><!-- end dashboard-content-wrap -->
