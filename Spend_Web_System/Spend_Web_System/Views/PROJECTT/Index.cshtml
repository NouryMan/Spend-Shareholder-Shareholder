@model PagedList.IPagedList<Spend.Models.PROJECTTBL_Model>
@using PagedList.Mvc;
@{
    ViewBag.Title = "المشاريع";
}




@if (Model != null)
{




    <div class="dashboard-content-wrap">
        <div class="dashboard-bread dashboard--bread dashboard-bread-2">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="breadcrumb-content">
                            <div class="section-heading">
                                <h2 class="sec__title font-size-30 text-white">المشاريع</h2>
                            </div>
                        </div><!-- end breadcrumb-content -->
                    </div><!-- end col-lg-6 -->
                    <div class="col-lg-6">
                        <div class="breadcrumb-list text-right">
                            <ul class="list-items">
                                <li><a href="index.html" class="text-white">الصفحة الرئيسية</a></li>
                                <li>المشاريع</li>
                                @*<li>الصلاحيات</li>*@
                            </ul>
                        </div><!-- end breadcrumb-list -->
                    </div><!-- end col-lg-6 -->
                </div><!-- end row -->
            </div>
        </div><!-- end dashboard-bread -->
        <div class="dashboard-main-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-box">
                            <div class="form-title-wrap">


                                <a href="~/PROJECTT/create" class="btn btn-primary btn-sm "> <i class="fa fa-plus"> </i> انشاء مشروع </a>



                            </div>
                            <div class="form-content">
                                @using (Html.BeginForm())
                                {



                                    <div class=" row input-group mb-4 ">
                                        <div class="col-md-3 col-sm-8  ">

                                            <input class="form-control" name="search" id="search" type="text" placeholder="بحث..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />

                                        </div>
                                        <div class="col-md-3 pr-0">
                                            <button class="btn btn-primary" type="submit"><i class="la la-search"></i></button>
                                        </div>


                                    </div>
                                }
                                <div>

                                    <table class="table  table-bordered table-striped ">
                                        <thead>
                                            <tr>

                                                <th class="text-align-center">
                                                    <span class="font-110"> رقم المشروع</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110">اسم المشروع</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110">المالك</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110">تاريخ بداية المشروع</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110">تاريخ نهاية المشروع</span>

                                                </th>
                                                @*<th class="text-align-center">
                                                        <span class="font-110">صرفيات المشروع</span>

                                                    </th>
                                                    <th class="text-align-center">
                                                        <span class="font-110">صرفيات الصايانة</span>

                                                    </th>
                                                    <th class="text-align-center">
                                                        <span class="font-110">ايرادات المشروع</span>

                                                    </th>*@
                                                <th class="text-align-center">
                                                    <span class="font-110">مغلق</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110"> الصيانة</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110">المبيعات</span>

                                                </th>
                                                <th class="text-align-center">
                                                    <span class="font-110">ملاحظة</span>

                                                </th>
                                                <th class="text-align-center">


                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Spend.Models.PROJECTTBL_Model item in Model)
                                            {


                                                <tr>
                                                    <td>@item.PROJECT_NO</td>
                                                    <td>@item.PROJECT_NAME</td>
                                                    <td>
                                                        @try
                                                        {@item.OWNERTBL_Model.OWNER_NAME}
                                                    catch { }
                                                </td>
                                                <td>@item.START_DATE</td>
                                                <td>@item.END_DATE</td>
                                                @*<td>@item.PROJECT_NO</td>
                                                    <td>@item.PROJECT_NO</td>
                                                    <td>@item.PROJECT_NO</td>*@

                                                @if (item.CLOSED == true)
                                                {
                                                    <td> نعم </td>
                                                }
                                                else
                                                {
                                                    <td> لا </td>
                                                }

                                                @if (item.M_CLOSED == true)
                                                {
                                                    <td> مغلق </td>
                                                }
                                                else
                                                {
                                                    <td> مفتوح </td>
                                                }
                                                @if (item.SALES_CLOSED == true)
                                                {
                                                    <td> مغلق </td>
                                                }
                                                else
                                                {
                                                    <td> مفتوح </td>
                                                }
                                                <td>
                                                    @item.REMARK
                                                </td>
                                                <td>
                                                    <div class="row  p-1">
                                                        <div class="col-md-12 ">
                                                            <a href="~/PROJECTT/Details/@item.PROJECT_NO" class="btn btn-success btn-sm "> <i class="la  la-eye"> </i></a>
                                                        </div>
                                                    </div>


                                                    <div class="row  p-1">

                                                        <div class="col-md-4 ">
                                                            <a href="~/PROJECTT/edit/@item.PROJECT_NO" class="btn btn-info btn-sm "> <i class="la  la-edit"></i></a>
                                                        </div>
                                                    </div>

                                                    <div class="row p-1 ">
                                                        <div class="col-md-4">


                                                            <button onclick="DeleteConfirmbox(@item.PROJECT_NO)" class="btn btn-danger btn-sm "> <i class="la  la-trash"></i></button>
                                                        </div>

                                                    </div>

                                                </td>
                                            </tr>

                                        }
                                        </tbody>

                                    </table>
                                </div>


                            </div>
                        </div><!-- end form-box -->
                    </div><!-- end col-lg-12 -->
                </div><!-- end row -->
                <div class="row">
                    <div class="col-lg-12">
                        <nav aria-label="Page navigation example">

                            صفحة @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) من @Model.PageCount

                            <div>


                                @Html.PagedListPager(Model, page => Url.Action("index",
                                                             new { page })
                                                             ,
                                                             new PagedListRenderOptions
                                                             {
                                                                 LiElementClasses = new string[] { "page-link page-link-nav" },


                                                             }

                                                    )
                            </div>


                            @*<ul class="pagination">
                                    <li class="page-item">
                                        <a class="page-link page-link-nav" href="#" aria-label="Previous">
                                            <span aria-hidden="true"><i class="la la-angle-left"></i></span>
                                            <span class="sr-only">Previous</span>
