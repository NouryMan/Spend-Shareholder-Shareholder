<input type="hidden" value="@Model.SCRIPT_TYPE" id="scrptType" />
<input type="hidden" value="@Model.FISCAL_YEAR" id="year" />
<input type="hidden" value="@Model.SCRIP_NO" id="scrNO" />


<script>

   var oldscrptType ;
    var oldyear;
    var oldscrNO;

    $(document).ready(function () {
        var today = moment().format('YYYY-MM-DD');

        $('#DATE_M').val(today);
        $('#FISCAL_YEAR').val(moment().format("YYYY"));
        $("#SCRIP_DATE").val(GetDate($("#DATE_M").val(), "m"))

        oldscrptType = @Html.Raw(Json.Encode(Model.SCRIPT_TYPE));
        oldyear =@Html.Raw(Json.Encode(Model.FISCAL_YEAR));
        oldscrNO =@Html.Raw(Json.Encode(Model.SCRIP_NO));
    });


    $("#DATE_M").change(function () {


        var year = moment($("#DATE_M").val(), 'YYYY-MM-DD').format("YYYY");

        $('#FISCAL_YEAR').val(year);
        $("#SCRIP_DATE").val(GetDate($("#DATE_M").val(),"m"))
        if (oldscrptType == $("#SCRIPT_TYPE").val() && oldyear == year) {
            $("#SCRIP_NO").val(oldscrNO)

        } else {

            getScript_NO()
        }

    });



    $("#SCRIP_DATE").change(function () {

        $("#DATE_M").val(moment(GetDate($("#SCRIP_DATE").val(),"h")).format('YYYY-MM-DD'))


    });

    function GetDate(date,type) {
        var reusert;
        var url = "";
        if (type == "m") {
            url = "https://api.aladhan.com/v1/gToH?date=" + moment(date).format('DD-MM-YYYY');
        } else {
            url = "https://api.aladhan.com/v1/hToG?date=" + moment(date).format('DD-MM-YYYY');
        }

        jQuery.ajax({

            type: "Get",
            async: false,
            url: url,
            success: function (data) {
                if (data.status == "OK") {
                    if (type == "m") {
                        reusert = moment(data.data.hijri.date, data.data.hijri.format).format('YYYY-MM-DD');
                    } else {
                        reusert = moment(data.data.gregorian.date, data.data.gregorian.format).format('YYYY-MM-DD');
                    }

                } else {
                    reusert = null;
                }

            }

        });

        return reusert;
    }



    $("#SCRIPT_TYPE").change(function () {

        if (oldscrptType == this.value && oldyear == $('#FISCAL_YEAR').val()) {
            $("#SCRIP_NO").val(oldscrNO)

        } else {
          
            getScript_NO()
        }

    });

    function getScript_NO() {

        id = $('#FISCAL_YEAR').val();
        type = $("#SCRIPT_TYPE").val()
        jQuery.ajax({

            type: "Get",

            url: '/api/Api_Spend_scriptbl/GetScript_NO/' + id + '?type=' + type,
            success: function (data) {
                if (data.success == true) {

                    $('#SCRIP_NO').val(data.data);

                } else {

                }






            }

        });
    }



</script>