@model Spend.Models.BOXTBL_Model
@{
    ViewBag.Title = " بطاقة صندوق ";
}









<div class="dashboard-content-wrap">
    <div class="dashboard-bread dashboard--bread dashboard-bread-2">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="breadcrumb-content">
                        <div class="section-heading">
                            <h2 class="sec__title font-size-30 text-white">تعديل صندوق</h2>
                        </div>
                    </div><!-- end breadcrumb-content -->
                </div><!-- end col-lg-6 -->
                <div class="col-lg-6">
                    <div class="breadcrumb-list text-right">
                        <ul class="list-items">
                            <li><a href="index.html" class="text-white">الصفحة الرئيسية</a></li>
                            <li>ادارة الحسابات </li>
                            <li>الصناديق</li>

                        </ul>
                    </div><!-- end breadcrumb-list -->
                </div><!-- end col-lg-6 -->
            </div><!-- end row -->
        </div>
    </div><!-- end dashboard-bread -->
    <div class="dashboard-main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-box">
                        <div class="form-title-wrap">
                            <div>
                                <h3 class="title"> بطاقة صندوق</h3>
                                @*<p class="font-size-14">إظهار 1 إلى 10 من أصل 20 مُدخل</p>*@
                            </div>



                        </div>
                        <div class="form-content">


                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => Model.BOX_NO)

                                <div class="row mb-3">



                                    <div class="col-md-6 ">
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm"> رقم الصندوق</label>
                                            <input class="form-control" value="@Model.BOX_NO" name="BOX_NO" type="number" disabled />
                                            @Html.ValidationMessageFor(model => model.BOX_NO, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">الاسم</label>
                                            @Html.EditorFor(model => model.BOX_NAME, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "الاسم ", @required = "required" } })
                                            @Html.ValidationMessageFor(model => model.BOX_NAME, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                </div>
                                <div class="row mb-3">


                                    <div class="col-md-6" hidden>
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm"> نوعية الصندوق</label>
                                            <select id="BOX_TYPE" name="BOX_TYPE" class="selectpicker  form-control" dir="rtl" data-live-search="true" required>
                                                @*<option value="">اختار النوعية </option>*@
                                                @foreach (var item in ViewBag.BoxType)
                                                {

                                                    <option class="themeprimary" value="@item.OP_NO">
                                                        @{ try
                                                            { @item.NAME }
                                                        catch { } }
                                                    </option>
                                                }


                                            </select>
                                            @Html.ValidationMessageFor(model => model.BOX_TYPE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm"> نوعية العملية</label>

                                            <select id="OP_TYPE" name="OP_TYPE" class="selectpicker  form-control" dir="rtl" data-live-search="true" required disabled>
                                                @*<option value="">اختار النوعية </option>*@
                                                @foreach (var item in ViewBag.BoxOp)
                                                {
                                                    if (item.OP_NO == 1)
                                                    {
                                                        <option class="themeprimary" value="@item.OP_NO" selected>
                                                            @{ try
                                                                { @item.OP_NAME }
                                                            catch { } }
                                                        </option>
                                                    }
                                                    <option class="themeprimary" value="@item.OP_NO">
                                                        @{ try
                                                            { @item.OP_NAME }
                                                        catch { } }
                                                    </option>
                                                }


                                            </select>
                                            <input hidden id="OP_TYPE" name="OP_TYPE" value="1" />
                                            @Html.ValidationMessageFor(model => model.OP_TYPE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">ملاحظة</label>
                                            @Html.EditorFor(model => model.NOTE, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = " ملاحظة", } })
                                            @Html.ValidationMessageFor(model => model.NOTE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                </div>

                                @*<div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating mb-12 mb-md-0">
                        <label for="inputPasswordConfirm">الرصيد الافتتاحي</label>
                        @Html.EditorFor(model => model.OP_PALANCE, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = " الرصيد الافتتاحي" } })
                        @Html.ValidationMessageFor(model => model.OP_PALANCE, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating mb-12 mb-md-0">
                        <label for="inputPasswordConfirm">ملاحظة</label>
                        @Html.EditorFor(model => model.NOTE, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = " ملاحظة", } })
                        @Html.ValidationMessageFor(model => model.NOTE, "", new { @class = "text-danger" })

                    </div>
                </div>

            </div>*@




                                <div class="row mb-3">


                                    <div class="col-md-6">

                                        <label for="inputPasswordConfirm">صندوق صرف</label>
                                        <div class="switch-h d-flex justify-content-between align-items-center border p-1 ">
                                            <h5 class="font-size-h4 text-dark mb-0">نعم</h5>
                                            <div class="custom-control switch custom-switch-info custom-switch custom-control-inline mr-0">
                                                @if (Model.SPEND_BOX == true)
                                                {
                                                    @Html.CheckBoxFor(model => model.SPEND_BOX, new { @class = "custom-control-input", @id = "OP_ACC", @checked = "checked", })
                                                }
                                                else
                                                {
                                                    @Html.CheckBoxFor(model => model.SPEND_BOX, new { @class = "custom-control-input", @id = "OP_ACC", })

                                                }
                                                <label class="custom-control-label mr-1" for="SPEND_BOX">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">


                                        <label for="inputPasswordConfirm">حالة الحساب</label>
                                        <div class="switch-h d-flex justify-content-between align-items-center border p-1 mb-3">
                                            <h5 class="font-size-h4 text-dark mb-0">مفعل</h5>
                                            <div class="custom-control switch custom-switch-info custom-switch custom-control-inline mr-0">
                                                @if (Model.ACTIVE)
                                                {
                                                    @Html.CheckBoxFor(model => model.ACTIVE, new { @class = "custom-control-input", @id = "IS_ENABLED", @checked = "checked", })
                                                }
                                                else
                                                {
                                                    @Html.CheckBoxFor(model => model.ACTIVE, new { @class = "custom-control-input", @id = "IS_ENABLED", })

                                                }
                                                <label class="custom-control-label mr-1" for="IS_ENABLE">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>










                                <div class="row mt-4 mb-0">
                                    <div class="d-grid col-md-6 "><button class="btn btn-primary btn-block" type="submit">حفظ</button></div>

                                    <div class="d-grid col-md-6"><a class="btn btn-danger btn-block" href="~/box/Index">رجوع</a></div>





                                </div>
                            }

                        </div>
                    </div><!-- end form-box -->
                </div><!-- end col-lg-12 -->
            </div><!-- end row -->

            <div class="border-top mt-5"></div>
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="copy-right padding-top-30px">

                        <p class="copy__desc">
                            &copy; Copyright Tech Light 2022. Made with
                            <span class="la la-heart"></span> by <a href="http://Tech-Light.com/">Noury</a>
                        </p>

                    </div><!-- end copy-right -->
                </div><!-- end col-lg-7 -->
                <div class="col-lg-5">
                    <div class="footer-social-box text-right padding-top-30px">
                        <ul class="social-profile">
                            <li><a href="#"><i class="lab la-facebook-f"></i></a></li>
                            <li><a href="#"><i class="lab la-twitter"></i></a></li>
                            <li><a href="#"><i class="lab la-instagram"></i></a></li>
                            <li><a href="#"><i class="lab la-linkedin-in"></i></a></li>
                        </ul>
                    </div><!-- end copy-right-content -->
                </div><!-- end col-lg-5 -->
            </div><!-- end row -->
        </div><!-- end container-fluid -->
    </div><!-- end dashboard-main-content -->
</div><!-- end dashboard-content-wrap -->
