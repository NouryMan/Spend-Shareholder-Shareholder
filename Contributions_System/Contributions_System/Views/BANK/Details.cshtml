@model Spend.Models.BANKTBL_Model
@{
    ViewBag.Title = " بطاقة بنك ";
}









<div class="dashboard-content-wrap">
    <div class="dashboard-bread dashboard--bread dashboard-bread-2">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="breadcrumb-content">
                        <div class="section-heading">
                            <h2 class="sec__title font-size-30 text-white">تفاصيل بنك</h2>
                        </div>
                    </div><!-- end breadcrumb-content -->
                </div><!-- end col-lg-6 -->
                <div class="col-lg-6">
                    <div class="breadcrumb-list text-right">
                        <ul class="list-items">
                            <li><a href="index.html" class="text-white">الصفحة الرئيسية</a></li>
                            <li>ادارة الحسابات </li>
                            <li>البنوك</li>

                        </ul>
                    </div><!-- end breadcrumb-list -->
                </div><!-- end col-lg-6 -->
            </div><!-- end row -->
        </div>
    </div><!-- end dashboard-bread -->
    <div class="dashboard-main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-box">
                        <div class="form-title-wrap">
                            <div>
                                <h3 class="title"> بطاقة بنك</h3>
                                @*<p class="font-size-14">إظهار 1 إلى 10 من أصل 20 مُدخل</p>*@
                            </div>



                        </div>
                        <div class="form-content">


                         
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">الحساب الرئيسي</label>
                                            <select id="ACC_PARENT" name="ACC_PARENT" class="selectpicker  form-control" dir="rtl" data-live-search="true" required disabled>
                                                <option value="">اختار حساب رئيسي </option>
                                                @foreach (var item in ViewBag.Parent_ACC)
                                                {
                                                    if (item.ACC_NO == Model.ACC_PARENT)
                                                    {
                                                        <option selected class="themeprimary" value="@item.ACC_NO">
                                                            @{ try
                                                                { @item.ACC_NAME <span>&nbsp;</span> @item.ACC_NO }
                                                            catch { }

                                                            }
                                                        </option>
                                                    }
                                                    else
                                                    {
                                                        <option class="themeprimary" value="@item.ACC_NO">
                                                            @{ try
                                                                { @item.ACC_NAME <span>&nbsp;</span> @item.ACC_NO }
                                                            catch { } }
                                                        </option>
                                                    }
                                                }


                                            </select>
                                            @Html.ValidationMessageFor(model => model.ACC_PARENT, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                    <div class="row col-md-6">
                                        <div class="col-md-12 ml-0">
                                            <div class="form-floating mb-6 mb-md-0">
                                                <label for="inputPasswordConfirm"> رقم الحساب</label>
                                                @Html.EditorFor(model => model.ACC_NO, new { htmlAttributes = new { @class = "form-control", @type = "number", @required = "required", disabled= "disabled" } })
                                                @Html.ValidationMessageFor(model => model.ACC_NO, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                       
                                    </div>


                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">الاسم</label>
                                            @Html.EditorFor(model => model.BANK_NAME, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "الاسم ", @required = "required", disabled= "disabled" } })
                                            @Html.ValidationMessageFor(model => model.BANK_NAME, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm">مالك الحساب</label>
                                            <select id="OWNER_NO" name="OWNER_NO" class="selectpicker  form-control" dir="rtl" data-live-search="true" required disabled>
                                                <option value="">اختار مالك الحساب</option>
                                                @foreach (var item in ViewBag.OWNER)
                                                {
                                                    if (item.OWNER_NO == Model.OWNER_NO)
                                                    {
                                                        <option selected class="themeprimary" value="@item.OWNER_NO">
                                                            @{ try
                                                                { @item.OWNER_NAME }
                                                            catch { }

                                                            }
                                                        </option>
}
                                                    else
                                                    {
                                                        <option class="themeprimary" value="@item.OWNER_NO">
                                                            @{ try
                                                                { @item.OWNER_NAME }
                                                            catch { }

                                                            }
                                                        </option>
                                                    }
                                                }


                                            </select>
                                            @Html.ValidationMessageFor(model => model.OWNER_NO, "", new { @class = "text-danger" })

                                        </div>
                                    </div>



                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">الرصيد الافتتاحي</label>
                                            @Html.EditorFor(model => model.START_PALANCE, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = " الرصيد الافتتاحي", disabled= "disabled" } })
                                            @Html.ValidationMessageFor(model => model.START_PALANCE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">تاريخ الافتتاح</label>
                                            <input type="text" class="form-control" id="START_DATE" name="START_DATE" value="@Model.START_DATE">
                                            @Html.ValidationMessageFor(model => model.START_DATE, "", new { @class = "text-danger" , disabled= "disabled" })



                                        </div>
                                    </div>


                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">فرع الاضافة</label>
                                            @Html.EditorFor(model => model.MBRANCH_ADD, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = " فرع الاضافة", disabled= "disabled" } })
                                            @Html.ValidationMessageFor(model => model.MBRANCH_ADD, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">رقم الجوال</label>
                                            @Html.EditorFor(model => model.PHONE, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = " رقم الجوال", disabled= "disabled" } })
                                            @Html.ValidationMessageFor(model => model.PHONE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                </div>







                                <div class="row mb-3">


                                    <div class="col-md-6">
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm">نوع الحساب</label>
                                            <select id="ACC_TYPE" name="ACC_TYPE" class="selectpicker  form-control" dir="rtl" data-live-search="true" required disabled>

                                                @foreach (var item in ViewBag.ACC_TYPE)
                                                {
                                                    if (item.ID_NO == Model.ACC_TYPE)
                                                    {
                                                    <option selected class="themeprimary" value="@item.ID_NO">
                                                        @{ try
                                                            { @item.ACC_TYPE }
                                                            catch { }

}
                                                    </option>
                }
                else
                {
                                            <option class="themeprimary" value="@item.ID_NO">
                                                @{ try
                                                    { @item.ACC_TYPE }
                                                catch { }

                                                }
                                            </option>
                }
                                                            }


                                            </select>
                                            @Html.ValidationMessageFor(model => model.ACC_TYPE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">طبيعة الحساب</label>
                                            <select id="ACC_NAT" name="ACC_NAT" class="selectpicker  form-control" dir="rtl" data-live-search="true" required disabled>

                                                @foreach (var item in ViewBag.ACC_NAT)
                                                {
                                                    if (item.ID_NO == Model.ACC_NAT)
                                                    {

                                                        <option class="themeprimary" value="@item.ID_NO"selected>
                                                            @{ try
                                                                { @item.ACC_NAT }
                                                            catch { }

                                                            }
                                                        </option>
}
                                                    else
                                                    {
                                                        <option class="themeprimary" value="@item.ID_NO">
                                                            @{ try
                                                                { @item.ACC_NAT }
                                                            catch { }

                                                            }
                                                        </option>
                                                    }
                                                }


                                            </select>
                                            @Html.ValidationMessageFor(model => model.ACC_NAT, "", new { @class = "text-danger" })

                                        </div>
                                    </div>




                                </div>




                                <div class="row mb-3">


                                    <div class="col-md-6">

                                        <label for="inputPasswordConfirm">حساب تحليلي</label>
                                        <div class="switch-h d-flex justify-content-between align-items-center border p-1 ">
                                            <h5 class="font-size-h4 text-dark mb-0">نعم</h5>
                                            <div class="custom-control switch custom-switch-info custom-switch custom-control-inline mr-0">
                                                @if (Model.OP_ACC == true)
                                                {
                                                    @Html.CheckBoxFor(model => model.OP_ACC, new { @class = "custom-control-input", @id = "OP_ACC", @checked = "checked", disabled = "disabled" })
                                                }
                                                else
                                                { @Html.CheckBoxFor(model => model.OP_ACC, new { @class = "custom-control-input", @id = "OP_ACC",  disabled = "disabled" })
                                            }<label class="custom-control-label mr-1" for="OP_ACC">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">


                                        <label for="inputPasswordConfirm">حالة الحساب</label>
                                        <div class="switch-h d-flex justify-content-between align-items-center border p-1 mb-3">
                                            <h5 class="font-size-h4 text-dark mb-0">مفعل</h5>
                                            <div class="custom-control switch custom-switch-info custom-switch custom-control-inline mr-0">
                                                @if (Model.IS_ENABLED == true)
                                                {
                                                    @Html.CheckBoxFor(model => model.IS_ENABLED, new { @class = "custom-control-input", @id = "IS_ENABLED", @checked = "checked", disabled = "disabled" })
                                                }
                                                else
                                                { @Html.CheckBoxFor(model => model.IS_ENABLED, new { @class = "custom-control-input", @id = "IS_ENABLED",  disabled = "disabled" })
                                                }
                                                <label class="custom-control-label mr-1" for="IS_ENABLE">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">ملاحظة</label>
                                            @Html.EditorFor(model => model.NOTE, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = " ملاحظة", disabled= "disabled" } })
                                            @Html.ValidationMessageFor(model => model.NOTE, "", new { @class = "text-danger" })

                                        </div>
                                    </div>



                                </div>








                                <div class="row mt-4 mb-0">                                   

                                    <div class="d-grid col-md-12"><a class="btn btn-danger btn-block" href="~/bank/Index">رجوع</a></div>





                                </div>
                           

                        </div>
                    </div><!-- end form-box -->
                </div><!-- end col-lg-12 -->
            </div><!-- end row -->

            <div class="border-top mt-5"></div>
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="copy-right padding-top-30px">

                        <p class="copy__desc">
                            &copy; Copyright Tech Light 2022. Made with
                            <span class="la la-heart"></span> by <a href="https://TechLight.sa/">Techlight.sa</a>
                        </p>

                    </div><!-- end copy-right -->
                </div><!-- end col-lg-7 -->
                <div class="col-lg-5">
                    <div class="footer-social-box text-right padding-top-30px">
                        <ul class="social-profile">
                            <li><a href="#"><i class="lab la-facebook-f"></i></a></li>
                            <li><a href="#"><i class="lab la-twitter"></i></a></li>
                            <li><a href="#"><i class="lab la-instagram"></i></a></li>
                            <li><a href="#"><i class="lab la-linkedin-in"></i></a></li>
                        </ul>
                    </div><!-- end copy-right-content -->
                </div><!-- end col-lg-5 -->
            </div><!-- end row -->
        </div><!-- end container-fluid -->
    </div><!-- end dashboard-main-content -->
</div><!-- end dashboard-content-wrap -->


