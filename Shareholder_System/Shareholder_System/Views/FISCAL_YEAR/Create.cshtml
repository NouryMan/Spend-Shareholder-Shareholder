                                                <option value="2015">2020  </option>
                                                <option value="2015">2021  </option>
                                                <option value="2015">2022  </option>
                                                <option value="2015">2023  </option>
                                                <option value="2015">2024  </option>
                                                <option value="2015">2025  </option>
                                                <option value="2015">2026  </option>
                                                <option value="2015">2027  </option>
                                                <option value="2015">2028  </option>
                                                <option value="2015">2029  </option>
                                                <option value="2015">2031  </option>
                                                <option value="2015">2032  </option>
                                                <option value="2015">2033  </option>
                                                <option value="2015">2034  </option>
                                                <option value="2015">2035  </option>
                                                <option value="2015">2036  </option>
                                                <option value="2015">2037  </option>
                                                <option value="2015">2038  </option>
                                                <option value="2015">2039  </option>
                                                <option value="2015">2040  </option>

                                            </select>

                                        </div>
                                    </div>


                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm"> البيان </label>
                                            @Html.EditorFor(model => model.NOTE, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = "required", } })
                                            @Html.ValidationMessageFor(model => model.NOTE, "", new { @class = "text-danger" })

                                        </div>


                                    </div>


                                </div>
                                <div class="row mb-3">

                                    <div class="col-md-6">
                                        <div class="form-floating mb-12 mb-md-0">
                                            <label for="inputPasswordConfirm">تبدا من تاريخ</label>
                                            @Html.EditorFor(model => model.START_DATE_M, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "required" } })
                                            @Html.ValidationMessageFor(model => model.START_DATE_M, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-6 mb-md-0">
                                            <label for="inputPasswordConfirm">تنتهي بتاريخ</label>
                                            @Html.EditorFor(model => model.END_DATE_M, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "required" } })
                                            @Html.ValidationMessageFor(model => model.END_DATE_M, "", new { @class = "text-danger" })

                                        </div>
                                    </div>




                                </div>




                                <div class="row mt-4 mb-0">
                                    <div class="d-grid col-md-6 "><button class="btn btn-primary btn-block" type="submit">حفظ</button></div>

                                    <div class="d-grid col-md-6"><a class="btn btn-danger btn-block" href="~/FISCAL_YEAR/Index">رجوع</a></div>





                                </div>
                            }

