@model IEnumerable<Spend.Models.FISCAL_YEAR_Model>
@{
    ViewBag.Title = "السنة المالية";
    int i = 1;
}


@if (Model != null)
{
    <div class="dashboard-content-wrap">
        <div class="dashboard-bread dashboard--bread dashboard-bread-2">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="breadcrumb-content">
                            <div class="section-heading">
                                <h2 class="sec__title font-size-30 text-white">السنة المالية</h2>
                            </div>
                        </div><!-- end breadcrumb-content -->
                    </div><!-- end col-lg-6 -->
                    <div class="col-lg-6">
                        <div class="breadcrumb-list text-right">
                            <ul class="list-items">
                                <li><a href="~" class="text-white">الصفحة الرئيسية</a></li>

                                <li>السنة المالية</li>
                            </ul>
                        </div><!-- end breadcrumb-list -->
                    </div><!-- end col-lg-6 -->
                </div><!-- end row -->
            </div>
        </div><!-- end dashboard-bread -->
        <div class="dashboard-main-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-box">
                            <div class="form-title-wrap">
                                @*<div>
                                        <h3 class="title">قوائم المسافر</h3>
                                        <p class="font-size-14">إظهار 1 إلى 10 من أصل 20 مُدخل</p>
                                    </div>*@

                                <a href="~/FISCAL_YEAR/create" class="btn btn-primary btn-sm "> <i class="fa fa-plus"> </i> انشاء سنة مالية </a>

                            </div>
                            <div class="form-content">
                                <div class="table-form table-responsive">
                                    <table class="display " id="data-table">
                                        <thead>
                                            <tr>
                                                <th>الرقم</th>
                                                <th>السنة </th>
                                                <th>البيان</th>
                                                <th>تبداء من</th>
                                                <th>تنتهي في </th>
                                               
                                                <th>الحالة</th>
                                               


                                                <th></th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var item in Model.OrderByDescending(x=>x.YEAR_ID))
                                            {


                                                <tr>

                                                    <td>
                                                        @i
                                                    </td>
                                                    <td>
                                                        @{ try
                                                            {@item.YEAR }
                                                        catch
                                                        {

                                                        }
                                                        }
                                                    </td>
                                                    <td>
                                                        @{ try
                                                            {@item.NOTE }
                                                        catch
                                                        {

                                                        }
                                                        }
                                                    </td>
                                                    <td>
                                                        @{ try
                                                            {@item.START_DATE_M.Value.ToString("dd/MM/yyyy") }
                                                        catch
                                                        {

                                                        }
                                                        }
                                                    </td>
                                                    <td>
                                                        @{ try
                                                            {@item.END_DATE_M.Value.ToString("dd/MM/yyyy") }
                                                        catch
                                                        {

                                                        }
                                                        }
                                                    </td>

                                                   


                                                    <td>
                                                        @if (item.STATUS==1)
                                                        {
                                                            <span class="badge badge-primary py-1 px-2"> مفتوحة</span>
                                                        }
                                                        else if (item.STATUS == 2)
                                                        {
                                                            <span class="badge badge-warning text-white py-1 px-2">مغلقة</span>
                                                        }
                                                    </td>


                                                  


                                                    <td>
                                                        <div class=" col-12">
                                                           
                                                                @if (item.STATUS == 1)
                                                                {
                                                                  
                                                                        <a href="~/FISCAL_YEAR/Update/@item.YEAR_ID" class="btn btn-danger btn-sm "> <i class="la  la-lock"> اغلاق </i></a>


                                                                }
                                                                @if (item.STATUS == 0)
                                                                {
                                                                    
                                                                        <a href="~/FISCAL_YEAR/details/@item.YEAR_ID" class="btn btn-success btn-sm "> <i class="la  la-lock-open"> فتح </i></a>
                                                                  
                                                                 
                                                                        <a href="~/FISCAL_YEAR/Update/@item.YEAR_ID" class="btn btn-success btn-sm "> <i class="la  la-edit"> تعديل </i></a>
                                                                   
                                                                        <button onclick="DeleteConfirmbox(@item.YEAR_ID)" class="btn btn-danger btn-sm "> <i class="la  la-trash"> حذف</i></button>
                                                                  
                                                                }

                                                                @if (item.STATUS == 1 || item.STATUS == 2)
                                                                {
                                                                    
                                                                        <a href="~/FISCAL_YEAR/Update/@item.YEAR_ID" class="btn btn-info btn-sm "> <i class="la  la-eye"> التفاصيل </i></a>
                                                                   
                                                                }

                                                         
                                                        </div>

                                                    </td>
                                                </tr>

                                                                i++;
                                                            }


                                        </tbody>
                                    </table>


                                </div>
                            </div>
                        </div><!-- end form-box -->
                    </div><!-- end col-lg-12 -->
                </div><!-- end row -->

                <div class="border-top mt-5"></div>
                <div class="row align-items-center">
                    <div class="col-lg-7">
                        <div class="copy-right padding-top-30px">
                            <p class="copy__desc">
                                &copy; Copyright Tech Light 2022. Made with
                                <span class="la la-heart"></span> by <a href="http://TechLightsa.com/">Noury</a>
                            </p>
                        </div><!-- end copy-right -->
                    </div><!-- end col-lg-7 -->
                    <div class="col-lg-5">
                        <div class="footer-social-box text-right padding-top-30px">
                            <ul class="social-profile">
                                <li><a href="#"><i class="lab la-facebook-f"></i></a></li>
                                <li><a href="#"><i class="lab la-twitter"></i></a></li>
                                <li><a href="#"><i class="lab la-instagram"></i></a></li>
                                <li><a href="#"><i class="lab la-linkedin-in"></i></a></li>
                            </ul>
                        </div><!-- end copy-right-content -->
                    </div><!-- end col-lg-5 -->
                </div><!-- end row -->
            </div><!-- end container-fluid -->
        </div><!-- end dashboard-main-content -->
    </div><!-- end dashboard-content-wrap -->

}


