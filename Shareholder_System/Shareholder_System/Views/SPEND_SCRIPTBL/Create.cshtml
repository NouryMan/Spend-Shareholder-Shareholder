<script>
    $(document).ready(function () {
        var today = moment().format('YYYY-MM-DD');

        $('#DATE_M').val(today);
        $('#FISCAL_YEAR').val(moment().format("YYYY"));
        $("#SCRIP_DATE").val(GetDate($("#DATE_M").val()))
    });


    $("#DATE_M").change(function () {


        var year = moment($("#DATE_M").val(), 'YYYY-MM-DD').format("YYYY");

        $('#FISCAL_YEAR').val(year);
        $("#SCRIP_DATE").val(GetDate($("#DATE_M").val()))
        getScript_NO()
    });



    $("#SCRIP_DATE").change(function () {

        $("#DATE_M").val(moment(GetDate($("#SCRIP_DATE").val())).format('YYYY-MM-DD'))


    });

    function GetDate(date) {
        var reusert;

        jQuery.ajax({

            type: "Get",
            async: false,
            url: '/api/ApiDate/GetDate?date=' + date,
            success: function (data) {
                if (data.success == true) {
                    reusert = data.data;

                } else {
                    reusert = null;
                }

            }

        });

        return reusert;
    }



    $("#SCRIPT_TYPE").change(function () {
        getScript_NO();
    });

    function getScript_NO() {

        id = $('#FISCAL_YEAR').val();
        type = $("#SCRIPT_TYPE").val()
        jQuery.ajax({

            type: "Get",

            url: '/api/Api_Spend_scriptbl/GetScript_NO/' + id + '?type=' + type,
            success: function (data) {
                if (data.success == true) {
                    $('#SCRIP_NO').val(data.data);

                } else {

                }






            }

        });
    }

    jQuery("#btnSave").click(function () {

        jQuery('#Add').parsley().whenValidate({

        }).done(function () {
            create();

        });



    });


    function create() {
        var script = {

            PROJECT_NO: $("#PROJECT_NO").val(),
            SCRIPT_TYPE: $("#SCRIPT_TYPE").val(),
            OP_TYPE: $("#OP_TYPE").val(),
            ACTION_TYPE: $("#ACTION_TYPE").val(),
            SHAKE_NO: $("#SHAKE_NO").val(),
            DEBTOR_ACC: $("#DEBTOR_ACC").val(),
            CREDITOR_ACC: $("#CREDITOR_ACC").val(),
            COST: $("#COST").val(),
            SCRIP_NAME:$("#SCRIP_NAME").val(),
            SCRIP_DATE: $("#SCRIP_DATE").val(),
            DATE_M: $("#DATE_M").val(),
            FISCAL_YEAR: $("#FISCAL_YEAR").val(),
            RECEIVED: $("#RECEIVED").is(":checked"),
            M_SCRIP: $("#M_SCRIP").is(":checked"),
            SCRIP_TRANS: $("#SCRIP_TRANS").is(":checked"),
            SUB_PROJ: $("#SUB_PROJ").val(),
            PART_NO: $("#PART_NO").val(),
            UNIT_NO: $("#UNIT_NO").val(),
            REMARK: $("#REMARK").val(),
            GROUP_NO: $("#GROUP_NO").val(),
            




        }

        var opbox = {

            ACC_HOLDER_NO: $("#ACCH_NO").val(),
            ACTION_TYPE: $("#ACTION_TYPE").val(),
            OP_TYPE: $("#HOP_TYPE").val(),
            SOURCE_BOX: $("#SOURCE_BOX").val(),
           

        }

        data = {
            SPEND_SCRIPTBL_Model: script,
            ACCH_OPBOXTBL_Model: opbox
        }

        jQuery.ajax({
            async: false,
            cache: false,
            type: "Post",
            data: data,
            url: '/api/Api_Spend_scriptbl/Addspend_scriptblWhitAccholder',
            success: function (data) {
                if (data.success == true) {
                    window.location.href = "../ACCH_OPBOXT/Index";

                    //fullInvPrint(data.data)


                } else {
                    alert("لم يتم  الحفظ\n" + data.Message)
                }



            }

        });

    }



    function fullInvPrint(invo) {

        $("#inv_no").append(invo.INV_NO)
        $("#inv_date").append(invo.DATE_M)
        $("#customer_name").append(invo.customer_name)
        $("#customer_phon").append(invo.customer_Phone)
        $("#invo_note").append(invo.NOTE)
        $("#discount").append(invo.DISCOUNT + " SAR")
        $("#inv_price").append(invo.PRICE + " SAR")
        $("#inv_vat").append(invo.VAT_AMOUNT + " SAR")
        $("#inv_total").append(invo.INV_PUR + " SAR")

        for (var i = 0; i < invo.SALES_INVDTTBL_Collection.length; i++) {
            var index = i + 1;
            $("#tabeltr").append(` <th scope="row">` + index + `</th>
                                <td>`+ invo.project_name + `</td>
                                <td>`+ invo.SALES_INVDTTBL_Collection[i].QNTY + `</td>
                                <td>`+ invo.SALES_INVDTTBL_Collection[i].PRICE + `</td>
                                <td>`+ invo.SALES_INVDTTBL_Collection[i].PRICE + `</td>
                                <td>`+ invo.SALES_INVDTTBL_Collection[i].TAXED_COST + ` %</td>
                                <td>`+ invo.SALES_INVDTTBL_Collection[i].VAT_AMOUNT + `</td>
                                <td>`+ invo.SALES_INVDTTBL_Collection[i].PUR_PRICE + `</td>
                                <td>`+ invo.SALES_INVDTTBL_Collection[i].DISCRIPTION + `</td>`)

        }



        generateQRcode(150, 150, invo.QRCODE);


        printInvoRoll("invoprintDiv")

    }
